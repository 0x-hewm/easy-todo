{
  "name": "easy-todo",
  "version": "1.0.0",
  "description": "一个简单的待办事项 Chrome 扩展",
  "main": "dist/popup.js",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "watch": "cross-env NODE_ENV=development webpack --watch --config webpack.config.js",
    "clean": "rm -rf dist/* && rm -f *.zip && rm -rf coverage",
    "package": "npm run build",
    "version": "node scripts/version.js",
    "release": "npm run version patch && npm run build",
    "release:minor": "npm run version minor && npm run build",
    "release:major": "npm run version major && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,css,html}\"",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint:check && npm run type-check && npm run test:ci",
    "ci-check": "./scripts/ci-check.sh"
  },
  "keywords": [
    "chrome-extension",
    "todo",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
